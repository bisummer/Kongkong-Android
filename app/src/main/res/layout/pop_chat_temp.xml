<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/new_back"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_temp_add"
        android:layout_width="58dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/image_temp_add"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/new_temp_plus" />
    </LinearLayout>

    <View
        android:layout_width="19dp"
        android:layout_height="1dp"
        android:background="#c9cace" />

    <LinearLayout
        android:id="@+id/ll_temp_cut"
        android:layout_width="58dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/image_temp_cut"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/new_temp_low" />
    </LinearLayout>

</LinearLayout>