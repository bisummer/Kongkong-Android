<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="58dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/new_back"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_windoption_auto"
        android:layout_width="58dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/image_wind_option_auto"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/new_auto" />
    </LinearLayout>

    <View
        android:layout_width="19dp"
        android:layout_height="1dp"
        android:background="#c9cace" />

    <LinearLayout
        android:id="@+id/ll_windoption_high"
        android:layout_width="58dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/image_wind_option_high"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/new_wind_high" />
    </LinearLayout>

    <View
        android:layout_width="19dp"
        android:layout_height="1dp"
        android:background="#c9cace" />

    <LinearLayout
        android:id="@+id/ll_windoption_middle"
        android:layout_width="58dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/image_wind_option_middle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/new_wind_middle" />
    </LinearLayout>

    <View
        android:layout_width="19dp"
        android:layout_height="1dp"
        android:background="#c9cace" />

    <LinearLayout
        android:id="@+id/ll_windoption_low"
        android:layout_width="58dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/image_wind_option_low"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/new_wind_low" />
    </LinearLayout>

</LinearLayout>